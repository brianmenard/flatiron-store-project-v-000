<h1>Your Cart</h1>


<% @cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= line_item.item.price_display %> | Quantity: <%= line_item.quantity %> <% if line_item.item.inventory < 5 %>
    | <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong>$<%= @cart.total.to_f/100 %></strong> </p>

<% unless @cart.status == "submitted" %>
  <%= button_to 'Checkout', checkout_path %>
<% end %>
